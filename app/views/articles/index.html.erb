
<div class="container">
    
    <% if account_signed_in? %>

   <%= link_to "logout", "/accounts/sign_out",  :class => "float-end text-dark text-decoration-none", method: :delete %>
   
             <% else %>

  <%= link_to "Signup", "/accounts/sign_up", :class => "float-end text-dark text-decoration-none px-3" %>
  <%= link_to "Login", "/accounts/sign_in", :class => "float-end text-dark text-decoration-none" %>

  <% end %>
</div>

<div class="container ">
    <h1 class="text-center mt-5 ">View Articles</h1>
</div>

<div class="continer text-center">
  <p>Welcome! <%=  current_account.email  %></p>
</div>

<div class="container">
  <% @articles.each do |article| %>
  <div class="card ftn mt-5">
   <%= image_tag article.avatar, :class=>"card-img-top"  if article.avatar.attached? %>
   <div class="card-body">
    <%= link_to article.title, article %>
  </div></div>

  <% end %>

<div class="mt-5 text-center">
  <%= link_to "New Article..", new_article_path %>
</div>
</div>